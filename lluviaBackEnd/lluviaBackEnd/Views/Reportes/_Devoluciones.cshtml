@using System.Globalization;
@model List<lluviaBackEnd.Models.Ventas>
@{
    List<lluviaBackEnd.Models.Ventas> lstVentas = ViewBag.lstVentas;
    List<SelectListItem> lstLineasDeProductos = (List<SelectListItem>)ViewBag.lstLineasDeProductos;
    List<SelectListItem> lstClientes = (List<SelectListItem>)ViewBag.lstClientes;
    List<SelectListItem> lstUsuarios = (List<SelectListItem>)ViewBag.lstUsuarios;
}


<div class="section-body">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped" id="tablaRepDevoluciones">
                            <thead>
                                <tr>
                                    <th>Fecha</th>
                                    <th>Almacen</th>
                                    <th>Cajero</th>
                                    <th>Folio</th>
                                    <th>Cliente</th>
                                    <th>Producto</th>
                                    <th>Unidades</th>
                                    <th>Precio Venta</th>
                                    <th>Monto Total</th>
                                    <th>Codigo Barras</th>
                                    <th>Tipo</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in lstVentas)
                                {
                                <tr>
                                    <td>@item.fechaAlta.ToShortDateString() &nbsp; @item.fechaAlta.ToShortTimeString()</td>
                                    <td>@item.descAlmacen</td>
                                    <td>@item.nombreUsuario</td>
                                    <td>@item.idVenta</td>
                                    <td>@item.nombreCliente</td>
                                    <td>@item.descripcionProducto</td>
                                    <td>@item.cantidad</td>
                                    <td>@item.precioVenta.ToString("C", new CultureInfo("en-US"))</td>
                                    <td>@item.montoTotal.ToString("C", new CultureInfo("en-US"))</td>
                                    <td>@item.codigoBarras</td>
                                    <td>@item.descripcion</td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>




