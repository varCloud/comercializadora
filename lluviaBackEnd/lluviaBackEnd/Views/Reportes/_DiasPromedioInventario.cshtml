@using System.Globalization;
@model lluviaBackEnd.Models.Notificacion<List<lluviaBackEnd.Models.DiasPromedioInventario>>

@{
    List<lluviaBackEnd.Models.DiasPromedioInventario> diasPromedioInventarios = Model.Modelo;
}

@if (Model.Estatus != 200)
{

    <div class="empty-state">
        <div class="empty-state-icon">
            <i class="fas fa-info"></i>
        </div>
        <h2>@Model.Mensaje</h2>
    </div>

}
else
{
    <div class="table-responsive">
        <table class="table table-striped" id="tblDiasPromedioInventario">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Descripcion</th>
                    <th>Costo Producto</th>
                    <th>Inventario Promedio Periodo</th>
                    <th>Costo Inventario Promedio</th>
                    <th>Dìas del periodo</th>
                    <th>Costo Vendido</th>
                    <th>Dìas Promedio Inventario</th>
                    <th>Rotaciòn Inventario</th>
                </tr>
            </thead>
            <tbody>

                @foreach (lluviaBackEnd.Models.DiasPromedioInventario c in diasPromedioInventarios)
                {
                <tr>
                    <td>@c.id</td>
                    <td>@c.descripcion</td>
                    <td>@c.CostoProducto.ToString("C", new CultureInfo("en-US"))</td>
                    <td>@c.InventarioPromedioPeriodo</td>
                    <td>@c.CostoInvPromedio.ToString("C", new CultureInfo("en-US"))</td>
                    <td>@c.diasPeriodo</td>
                    <td>@c.CostoVendido.ToString("C", new CultureInfo("en-US"))</td>
                    <td>@c.diasPromedioInventario</td>
                    <td>@c.rotacionInventario</td>
                </tr>
                }
            </tbody>

        </table>
    </div>

}


