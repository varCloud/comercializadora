@using System.Globalization;
@using lluviaBackEnd.Models;

@model Notificacion<List<Merma>>

@if (Model.Estatus != 200)
{

    <div class="empty-state">
        <div class="empty-state-icon">
            <i class="fas fa-info"></i>
        </div>
        <h2>@Model.Mensaje</h2>
    </div>

}
else
{
    <div class="table-responsive">
        <table class="table table-striped" id="tblMerma">
            <thead>
                <tr>
                    <th>Codigo de Barras</th>
                    <th>Producto</th>
                    <th>Lìnea</th>
                    <th>Inventario final mes anterior</th>
                    <th>Compras Mensuales</th>
                    <th>Inventario total disponible</th>
                    <th>Merma</th>
                    <th>% Merma</th>
                    <th>Ultimo de costo de compra</th>
                    <th>Costo de la merma</th>
                </tr>
            </thead>
            <tbody>

                @foreach (lluviaBackEnd.Models.Merma c in Model.Modelo)
                {
                    <tr>           
                        <td>@c.codigoBarras</td>
                        <td>@c.descripcionProducto</td>
                        <td>@c.descripcionLinea</td>
                        <td>@c.inventarioFinalMesAnt</td>
                        <td>@c.totalCompras</td>
                        <td>@c.inventarioSistema</td>
                        <td>@c.merma</td>
                        <td>@c.porcMerma</td>
                        <td>@c.ultCostoCompra.ToString("C", new CultureInfo("en-US"))</td>
                        <td>@c.costoMerma.ToString("C", new CultureInfo("en-US"))</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

}



