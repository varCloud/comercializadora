                                <div class="invoice-detail-name  pull-left">Último Cambio:</div>
                                <br>
                                <div class="invoice-detail-value pull-left" id="ultimoCambio"><h4>$0.0</h4></div>

                                <a href="@Url.Action("Ventas", "Ventas")" class="btn btn- btn-danger"><i class="fas fa-times"></i> Cancelar</a>
                                <button id="previoVenta" class="btn btn-primary btn-icon icon-left">
                                    <i class="fas fa-hand-holding-usd"></i> Realizar Devolucion
                                </button>
                            </div>
                        }
                        else
                        {
                            if (esAgregarProductos)
                            {
                                <div class="text-md-right">

                                    <div class="invoice-detail-name  pull-left">Último Cambio:</div>
                                    <br>
                                    <div class="invoice-detail-value pull-left" id="ultimoCambio"><h4>$0.0</h4></div>

                                    <a href="@Url.Action("Ventas", "Ventas")" class="btn btn- btn-danger"><i class="fas fa-times"></i> Cancelar</a>
                                    <button id="previoVenta" class="btn btn-primary btn-icon icon-left">
                                        <i class="far fa-plus-square"></i> Agregar Productos
                                    </button>
                                </div>
                            }
                            else
                            {
                                <div>
                                    <div class="text-md-right">

                                        <div class="invoice-detail-name  pull-left">Último Cambio:</div>
                                        <br>
                                        <div class="invoice-detail-value pull-left" id="ultimoCambio"><h4>$0.0</h4></div>

                                        <button id="limpiar" class="btn btn-danger btn-icon icon-left"><i class="fas fa-times"></i>Limpiar</button>
                                        <button id="previoVenta" class="btn btn-primary btn-icon icon-left">
                                            <i class="fas fa-credit-card"></i> Realizar Venta
                                        </button>
                                    </div>
                                </div>

                            }
                        }



                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



