                                                    }
                                                }

                                                <td style="display: none;">@item.idVentaDetalle</td>
                                                <td style="display: none;">@item.montoComisionBancaria</td>
                                                @*<td style="display: block;">@item.ultimoCostoCompra</td>*@

                                            </tr>

                                            }

                                        </tbody>
                                    }
                                }
                                else
                                {
                                    <tbody></tbody>
                                }

                            </table>
                        </div>

                        <div class="row mt-4">
                            <div class="col-lg-6">

                            </div>
                            <div class="col-lg-6 text-right">

                                @*<div class="invoice-detail-item">
                                        <div class="invoice-detail-name">I.V.A.</div>
