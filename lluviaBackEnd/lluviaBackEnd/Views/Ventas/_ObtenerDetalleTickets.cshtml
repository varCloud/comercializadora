
@using lluviaBackEnd.Models
@using System.Globalization;
@model lluviaBackEnd.Models.Notificacion<List<lluviaBackEnd.Models.Ticket>>

@{
    Notificacion<List<lluviaBackEnd.Models.Ticket>> devoluciones = ViewBag.devoluciones;
    Notificacion<List<lluviaBackEnd.Models.Ticket>> complementos = ViewBag.complementos;
    int idVenta = ViewBag.idVenta;
}

@if (ViewBag.devoluciones.Modelo == null && ViewBag.complementos.Modelo == null)
{

    <div class="empty-state">
        <div class="empty-state-icon">
            <i class="fas fa-info"></i>
        </div>
        <h2> No existe la información solicitada. </h2>
    </div>

}
else
{

<div class="row">
    <div class="col-12 col-md-12 col-lg-12">
        <div class="card card-primary">
            <div class="card-header">
                <h4>Número de Ticket : @idVenta</h4>
                <div class="card-header-action">
                    <a href="@Url.Action("VerTodosTickets", "Ventas", new {idVenta = idVenta})" target="_blank" class="btn btn-success"> Ver todo </a>
             @*&nbsp; <a href="javascript:ImrimirTodosTickets(@idVenta);" class="btn btn-success"> Imprimir todo </a>*@
                </div>
            </div>
            <div class="card-body">
                @*<p>Write something here</p>*@
            </div>
        </div>
    </div>
</div>

    <div class="row">
        <div class="col-12 col-md-6 col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h4>Devoluciones</h4>
                </div>
                <div class="card-body p-0">
                    @if (@ViewBag.devoluciones.Modelo != null)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-md">
                                <tbody>
                                    <tr>
                                        <th>#</th>
                                        <th>Ticket</th>
                                        <th>Ver</th>
                                        <th>Imprimir</th>
                                    </tr>
                                    @foreach (var item in @ViewBag.devoluciones.Modelo)
                                    {
                                        <tr>
                                            <td>@item.contador</td>
                                            <td>Ticket: @item.idDevolucion</td>
                                            <td><a href="@Url.Action("VerTicketDevolucion", "Ventas", new {idVenta = item.idVenta, idDevolucion=item.idDevolucion})" target="_blank" class="btn btn-primary">Ver</a></td>
                                            <td><a href="javascript:ImprimeTicketDevolucion(@item.idVenta, @item.idDevolucion);" class="btn btn-primary">Imprimir</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <div class="empty-state-icon">
                                <i class="fas fa-info"></i>
                            </div>
                            <h2> No existen devoluciones. </h2>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h4>Complementos</h4>
                </div>
                <div class="card-body p-0">
                    @if (@ViewBag.complementos.Modelo != null)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-md">
                                <tbody>
                                    <tr>
                                        <th>#</th>
                                        <th>Ticket</th>
                                        <th>Ver</th>
                                        <th>Imprimir</th>
                                    </tr>
                                    @foreach (var item in @ViewBag.complementos.Modelo)
                                    {
                                        <tr>
                                            <td>@item.contador</td>
                                            <td>Ticket: @item.idComplemento</td>
                                            <td><a href="@Url.Action("VerTicketComplemento", "Ventas", new {idVenta = item.idVenta, idComplemento=item.idComplemento})" target="_blank" class="btn btn-primary">Ver</a></td>
                                            <td><a href="javascript:ImprimeTicketComplemento(@item.idVenta, @item.idComplemento);" class="btn btn-primary">Imprimir</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <div class="empty-state-icon">
                                <i class="fas fa-info"></i>
                            </div>
                            <h2> No existen complementos. </h2>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}


